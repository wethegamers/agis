# EditorConfig - https://editorconfig.org
# Helps maintain consistent coding styles across editors and IDEs

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# Go files - use tabs as per Go standards
[*.go]
indent_style = tab
indent_size = 4

# YAML files - 2 spaces (Kubernetes/Helm convention)
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Makefiles - must use tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 4

# Helm templates
[templates/*.yaml]
indent_style = space
indent_size = 2

# GitHub Actions
[.github/workflows/*.{yaml,yml}]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_style = space
indent_size = 2
