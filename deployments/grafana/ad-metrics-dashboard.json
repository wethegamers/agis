{
  "dashboard": {
    "title": "AGIS Bot - Ad Conversion Metrics",
    "tags": ["ads", "revenue", "conversions"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Conversion Rate (Last 24h)",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rate(agis_ad_conversions_total{status=\"completed\"}[24h]) * 100",
            "legendFormat": "Conversion %"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Total Revenue (GC)",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(agis_ad_rewards_total)",
            "legendFormat": "Total GC"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "id": 3,
        "title": "Fraud Rate",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "(sum(agis_ad_fraud_attempts_total) / (sum(agis_ad_conversions_total) + sum(agis_ad_fraud_attempts_total))) * 100",
            "legendFormat": "Fraud %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Conversions",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(agis_ad_conversions_total{status=\"completed\"}[5m])) * 300",
            "legendFormat": "Conv/5m"
          }
        ]
      },
      {
        "id": 5,
        "title": "Conversions Over Time",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(agis_ad_conversions_total{status=\"completed\"}[5m])) by (type)",
            "legendFormat": "{{type}}"
          },
          {
            "expr": "sum(rate(agis_ad_conversions_total{status=\"fraud\"}[5m]))",
            "legendFormat": "fraud"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Conversions/sec"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "avg": true, "max": true, "current": true}
      },
      {
        "id": 6,
        "title": "Revenue by Ad Type",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(agis_ad_rewards_total[5m])) by (type)",
            "legendFormat": "{{type}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "GC/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Callback Latency (P95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(agis_ad_callback_latency_seconds_bucket[5m])) by (le, provider))",
            "legendFormat": "{{provider}} P95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(agis_ad_callback_latency_seconds_bucket[5m])) by (le, provider))",
            "legendFormat": "{{provider}} P99"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Conversions by User Tier",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 12, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(agis_ad_conversions_by_tier_total) by (tier)",
            "legendFormat": "{{tier}}"
          }
        ]
      },
      {
        "id": 9,
        "title": "Fraud Detection Breakdown",
        "type": "piechart",
        "gridPos": {"x": 18, "y": 12, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum(agis_ad_fraud_attempts_total) by (reason)",
            "legendFormat": "{{reason}}"
          }
        ]
      },
      {
        "id": 10,
        "title": "Hourly Revenue Trend",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(agis_ad_rewards_total[1h]))",
            "legendFormat": "GC per hour"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Game Credits"},
          {"format": "short"}
        ]
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
